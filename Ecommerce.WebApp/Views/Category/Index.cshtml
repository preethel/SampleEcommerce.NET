@using Ecommerce.WebApp.Models.CategoryList;

@model CategoryListViewModel


@{
    int slNo = 0;
}

<h4>Category List</h4>

<a asp-action="Create" class="btn btn-primary">Add New </a>


<div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Category Code</th>             
            </tr>
        </thead>
        <tbody>

            @foreach (var category in Model.CategoryList)
            {
                <tr>
                    <td>@(++slNo)</td>
                    <td>@category.Name</td>
                    <td>@category.CategoryCode</td>
                    <td>View |<a asp-action="Edit" asp-route-id="@category.Id">Edit</a>  |<a asp-action="Delete" asp-route-id="@category.Id"> Remove </a></td>
                </tr>
            }
        </tbody>
    </table>

</div>